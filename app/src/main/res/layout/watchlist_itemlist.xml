<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:strokeColor="@color/grey"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            style="@style/ImageShape"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/adobe"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:id="@+id/adobeImage"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/adbText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/adobeImage"
            android:text="ADB"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/dark_green"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/adbInctext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/adobeImage"
            android:layout_below="@+id/adbText"
            android:text="Adobe Inc"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/grey"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/adbIncNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/adbText"
            android:text="â¬† 5.49%"
            android:textSize="10sp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="110dp"
            android:textColor="@color/light_green"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/numberStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adobeImage"
            android:text="33.49"
            android:textSize="25sp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="14dp"
            android:textColor="@color/dark_green"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/numberStocksmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numberStock"
            android:text="$643.58"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="14dp"
            android:textColor="@color/grey"/>

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_below="@id/adbIncNumber"
            android:layout_toEndOf="@+id/numberStocksmall"
            android:layout_marginStart="28dp"
            android:layout_marginTop="15dp">

            <com.github.mikephil.charting.charts.LineChart
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lineChart"/>

        </RelativeLayout>




    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>

